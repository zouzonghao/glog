+func ExtractFirstImageURL(md string) string {
+	// Regex to find the first markdown image: ![alt text](image_url)
+	re := regexp.MustCompile(`!\[.*?\]\((.*?)\)`)
+	matches := re.FindStringSubmatch(md)
+
